

        <!-- Header -->
        <%- include('header')  %>

        <!-- main-conatnt -->
        <div class="container mt-4">
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
                <div class="main-carousel">
                    <div class="carousel">
                        <div class="items">
                            <% record.forEach((val, i)=> { %>
                                <img src="<%= val.image  %>" alt="" class="carousel-image current" />
                            <% }) %>
                        </div>
                    </div>
                    <div class="buttons">
                        <i class="fas fa-chevron-left fa-3x" id="prevBtn"></i>
                        <i class="fas fa-chevron-right fa-3x" id="nextBtn"></i>
                    </div>
                </div>
            </div>

            <section id="collection">
            <h2 class="mt-3">Top Posts</h2>
                <div class="collections  container">
                    
                    <% record.map((val, i)=> { %>
                        <div class="content">
                            <img src="<%= val.image  %>" alt="img" />
                            <div class="img-content">
                                <p class="img-date"> 
                                    <%= val.date %>
                                </p>
                                <p>
                                    <%= val.name %>
                                    
                                </p>
                                <a href="/mainBlog?id=<%= val.id %>" class="btn btn-primary subpage-readmore-btn">Read More</a>

                            </div>
                        </div>
                        <% }) %>

                </div>

            </section>

            <div class="row d-flex mt-4">
                <div class="col-md-12">
                    <h2>Latest Posts</h2>

                    <!-- Blog Post Cards -->
                    <% record.reverse().map((val, i)=> { %>
                        <div class="card blog-post mt-5 mb-3">
                            <img src="<%= val.image %>" class="card-img-top" alt="Post Image">
                            <div class="card-body text-content">
                                <p class="card-text m-1 subpage-exp-content">
                                    <%= val.date %>
                                </p>
                                <h5 class="card-title post-title">
                                    <%= val.name %>
                                </h5>
                                <p class="card-text text-overflow subpage-exp-content">
                                    <%= val.des %>
                                </p>
                                <a href="/mainBlog?id=<%= val.id %>" class="btn btn-primary subpage-readmore-btn">Read More</a>
                            </div>
                        </div>
                    <% }) %>

                            <!-- Add more post cards as needed -->

                </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('footer')  %>


        